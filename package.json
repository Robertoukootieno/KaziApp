{
  "name": "kaziapp",
  "version": "1.0.0",
  "description": "Africa-First Agricultural Platform",
  "main": "index.js",
  "scripts": {
    "install:all": "npm run install:web && npm run install:services",
    "install:web": "cd clients/web && npm install",
    "install:services": "npm run install:api-gateway && npm run install:user-service && npm run install:matching-service && npm run install:communication && npm run install:ai-diagnostics && npm run install:marketplace && npm run install:farm-management && npm run install:payment-service && npm run install:notification && npm run install:community",
    "install:api-gateway": "cd services/api-gateway && npm install",
    "install:user-service": "cd services/user-service && npm install",
    "install:matching-service": "cd services/matching-service && npm install",
    "install:communication": "cd services/communication && npm install",
    "install:ai-diagnostics": "cd services/ai-diagnostics && npm install",
    "install:marketplace": "cd services/marketplace && npm install",
    "install:farm-management": "cd services/farm-management && npm install",
    "install:payment-service": "cd services/payment-service && npm install",
    "install:notification": "cd services/notification && npm install",
    "install:community": "cd services/community && npm install",
    "dev": "docker-compose up",
    "dev:web": "cd clients/web && npm run dev",
    "dev:mobile": "cd clients/mobile && flutter run",
    "build": "npm run build:web && npm run build:services",
    "build:web": "cd clients/web && npm run build",
    "build:services": "docker-compose build",
    "test": "npm run test:web && npm run test:services",
    "test:web": "cd clients/web && npm test",
    "test:services": "npm run test:user-service && npm run test:matching-service && npm run test:communication && npm run test:ai-diagnostics && npm run test:marketplace && npm run test:farm-management && npm run test:payment-service && npm run test:notification && npm run test:community",
    "test:user-service": "cd services/user-service && npm test",
    "test:matching-service": "cd services/matching-service && npm test",
    "test:communication": "cd services/communication && npm test",
    "test:ai-diagnostics": "cd services/ai-diagnostics && npm test",
    "test:marketplace": "cd services/marketplace && npm test",
    "test:farm-management": "cd services/farm-management && npm test",
    "test:payment-service": "cd services/payment-service && npm test",
    "test:notification": "cd services/notification && npm test",
    "test:community": "cd services/community && npm test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "k8s:delete": "kubectl delete -f infrastructure/kubernetes/"
  },
  "keywords": [
    "agriculture",
    "africa",
    "farmers",
    "veterinary",
    "marketplace",
    "ai",
    "offline",
    "mobile-money",
    "microservices"
  ],
  "author": "KaziApp Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "clients/web",
    "services/*"
  ]
}
