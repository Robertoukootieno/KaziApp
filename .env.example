# Database Configuration
POSTGRES_DB=kaziapp
POSTGRES_USER=kaziapp
POSTGRES_PASSWORD=kaziapp_password
POSTGRES_URL=postgresql://kaziapp:kaziapp_password@localhost:5432/kaziapp

MONGODB_URL=mongodb://kaziapp:kaziapp_password@localhost:27017/kaziapp
REDIS_URL=redis://localhost:6379

# API Configuration
API_GATEWAY_PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_key_here

# External APIs
KENYA_VET_BOARD_API_URL=https://api.kenyavetboard.go.ke
KENYA_VET_BOARD_API_KEY=your_vet_board_api_key

# Communication Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token
SMS_API_KEY=your_sms_provider_api_key
SMS_API_URL=https://api.africastalking.com/version1

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_mpesa_shortcode
MPESA_PASSKEY=your_mpesa_passkey
MPESA_ENVIRONMENT=sandbox # or production

# Weather & Climate Data
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# AI/ML Configuration
MODEL_PATH=/app/models
TENSORFLOW_SERVING_URL=http://localhost:8501
AI_MODEL_VERSION=1.0.0

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=kaziapp-storage

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn

# USSD Configuration
USSD_SERVICE_CODE=*123#
USSD_PROVIDER_URL=https://api.africastalking.com/version1/ussd

# Voice Assistant
SPEECH_TO_TEXT_API_KEY=your_speech_api_key
TEXT_TO_SPEECH_API_KEY=your_tts_api_key

# Security
ENCRYPTION_KEY=your_encryption_key_32_chars
CORS_ORIGIN=http://localhost:3010

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600 # 1 hour in seconds

# Notification Configuration
PUSH_NOTIFICATION_KEY=your_firebase_server_key
EMAIL_SERVICE_API_KEY=your_email_service_key

# Data Privacy & Compliance
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE=true
KENYA_DATA_PROTECTION_COMPLIANCE=true
